<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="by.academy.alekhno.database.object" auto-import="false" catalog="drycleanerdb">
	<class name="User" table="user">
		<id name="id" type="long" column="id">
			<generator class="increment"/>
		</id>
		<property name="login" type="string" column="login"/>
		<property name="password" type="string" column="password"/>
		<property name="firstName" type="string" column="first_name"/>
		<property name="secondName" type="string" column="second_name"/>
		<property name="telephone" type="long" column="telephone"/>
	</class>

</hibernate-mapping>